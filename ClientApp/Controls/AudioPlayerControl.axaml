<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Chat.ClientApp.Controls.AudioPlayerControl">
	<StackPanel>
		<TextBlock Name="UserNameText"/>
		<Button Name="PlayButton" Content="Play" Click="PlayButton_Click"/>
		<Button Name="PauseButton" Content="Pause" Click="PauseButton_Click"/>
		<Button Name="StopButton" Content="Stop" Click="StopButton_Click"/>
		<Slider Name="VolumeSlider" Minimum="0" Maximum="1" Value="1" ValueChanged="Slider_ValueChanged"/>
	</StackPanel>
</UserControl>
